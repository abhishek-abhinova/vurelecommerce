{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://vurel-backend.onrender.com/api"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://vurel-backend.onrender.com/api/:path*"
    }
  ]
}